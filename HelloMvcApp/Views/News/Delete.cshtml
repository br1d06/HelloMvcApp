@model WOD.WebUI.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="wrapper">
	<h1>Delete page</h1>

	<h3>Are you sure you want to delete this?</h3>
    <h4>News</h4>
    <hr />
    <div class="news-delete-box">
        <form asp-action="Delete" asp-asp-controller="News">
        @for (int index = 0; index < Model.AllNews.Count; index++)
        {
            <div class="news-widgets">
                    <a news="blah" href="#"><img src="~/Content/NewsImages/@Model.AllNews[index].Image" /></a>
				<span>@Model.AllNews[index].Title</span>
                <br>
                <button type="submit" asp-route-id="@Model.AllNews[index].Id">Delete</button>
            </div>         
		}
        </form>
	</div>

    <a asp-action="Index" style="padding-top: 10px">Back to List</a>

</div>
