@using System.ComponentModel.DataAnnotations;
@using WOD.Domain.Models;

@model WOD.Domain.Models.FootballClub

@{
    ViewData["Title"] = "Details";

}



<div class="wrapper">
    <img src="@Html.DisplayFor(model=> model.Logo)" /> <h1>@Html.DisplayFor(model=> model.FullName)</h1>
    
    <div class="fc-card">
            <dl>
                <dt>Position in EPL Table</dt>
                <dd>@Html.DisplayFor(model=> model.TablePosition)</dd>
			    <dt>Points</dt>
                <dd>@Model.Points()</dd>
			    <dt>Games</dt>
			    <dd>@Html.DisplayFor(model=> model.Games)</dd>			    			              
                <dt>Wins</dt>
                <dd>@Html.DisplayFor(model=> model.Wins)</dd>
                <dt>Loses</dt>
                <dd>@Html.DisplayFor(model=> model.Loses)</dd>
                <dt>Draws</dt>
                <dd>@Html.DisplayFor(model=> model.Draws)</dd>
                <dt>Goals scored</dt>
                <dd>@Html.DisplayFor(model=> model.GoalsScored)</dd>
                <dt>Goals missed</dt>
                <dd>@Html.DisplayFor(model=> model.GoalsMissed)</dd>
                <dt>Goals difference</dt>
                <dd>@Model.GoalsDifference()</dd>
            </dl>
    </div>
</div> 